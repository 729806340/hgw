/* pages/flashSale/flashSale.wxss */
.collage{
    width: 100vw;
    height: 100vh;
    position: relative;
    overflow: hidden;
}

.scroll{
    width: 100vw;
    height: 100vh;
    position: relative;
    background: #ffffff;
}

.collage-container{
    width:100%;
    display:flex;
    flex-direction:row;
    flex-wrap:wrap;
}

.collage-item{
    width:342rpx;
    display:flex;
    flex-wrap:wrap;
    flex-direction:column;
    align-items:center;
    margin:15rpx 0;
    margin-left:20rpx;
    border-bottom:solid 2rpx #f5f5f5;
    position:relative;
    background:#fff;
    box-shadow:0rpx 0rpx 4rpx 2rpx #f0f0f0;
    border-radius:4px;
}

.collageImg{
    width:342rpx;
    height:342rpx;
    border-radius:4px 4px 0 0;
    position:relative;
}

.goodsDetail{
    width: 100%;
    padding: 24rpx 20rpx 20rpx 20rpx;
    box-sizing: border-box;
}

.goodstext{
    width: 100%;
    height: 80rpx;
    font-size:28rpx;
    color:#101010;
    overflow:hidden;
    text-overflow:ellipsis;
}

.goodsname{
    color:#FE5A4C;
}

.goodsprice{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 12rpx;
}

.price{
    align-items: baseline;
}

.price .text{
    font-size: 33rpx;
    color: #FE5A4C;
}

.price .num_before {
  font-size: 25rpx;
  color: #aaa;
  position: relative;
  font-weight: lighter;
  margin-left: 6rpx;
  text-decoration: line-through;
}

.btn_collage{
    display: block;
    width: 100rpx;
    height: 46rpx;
    line-height: 46rpx;
    text-align: center;
    background-image: linear-gradient(90deg, #FE9968 0%, #FE5A4C 100%);
    border-radius: 10rpx;
    font-size: 24rpx;
    color: #ffffff;
}

.list_bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 auto;
  width: 100%;
}

.line {
  width: 100rpx;
  height: 2rpx;
  background: #f0f0f0;
}

.list_bottom_t {
  font-size: 26rpx;
  color: #aaa;
  margin: 20rpx;
}

.no_list{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.no_list text{
    font-size: 30rpx;
    color: #aaa;
    margin-top: 48rpx;
}

.no_list image{
    display: block;
    width: 258rpx;
    height: 258rpx;
    margin-top: 160rpx;
}