  align-items: center;
  align-content: center;
  margin-left: 24rpx;
  margin-top: 30rpx;
}

.txt_desc {
  font-size: 28rpx;
  color: #666;
  margin-right: 62rpx;
}
.submit_com{
  position: fixed;
  bottom: 40rpx;
  width: 702rpx;
  height: 88rpx;
  margin: 0 24rpx;
}
.submit_btn {
  width: 702rpx;
  height: 88rpx;
  background: #2eb772;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 88rpx; 
}
.scroll{
  height:100vh;
  width:100%;
  box-sizing:border-box;
  background:#fff;
  padding-bottom:185rpx;
}
.gray_line{
  height:20rpx;
  background:#f5f5f5;
}

.deltel{
  display:block;
  position:absolute;
  top:0;
  right:0;
  width:100rpx;
  height:100rpx;
  opacity: .5;
  background:#333;
}
.img{
  display: block;
  width: 58rpx; 
  height: 58rpx;
  margin:21rpx 21rpx;
}
