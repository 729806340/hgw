/* pages/undex_line/undex_line.wxss */
.undex_line{
    display:flex;
    flex-direction:column;
    overflow-x:hidden;
    width:100vw;
    height:100vh;
    background:#ffffff;
    position: relative;
}
.t_scroll{
    width:100vw;
    height:1116rpx;
    z-index:100;
    padding-bottom: 20rpx;
    box-sizing:border-box;
}
.t_scrolls{
    width:100vw;
    height: 100vh;
    z-index:100;
    padding-bottom: 120rpx;
    box-sizing:border-box;
}
.undex_item{
    width: 100%;
    height: 186rpx;
    border-bottom: 1px solid #EDEDED;
    padding: 32rpx 24rpx 0 24rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
}
.undex_item image{
    display: block;
    width: 122rpx;
    height: 122rpx;
}
.undex_text{
    margin-left:30rpx;
    display:flex;
    flex:1;
    width:0;
    padding:10rpx 0;
    flex-direction:column;
    position:relative;
}
.t5{
    width: 100%;
    display:flex;
    flex-direction:row;
    justify-content: space-between;
}
.t5_dress{
    font-size: 32rpx;
    color: #222222;
}
.t5_road{
    font-size: 28rpx;
    color: #2EB772;
    padding-top: 15rpx;
}
.t6{
    font-size: 28rpx;
    color: #666666;
    margin-top: 30rpx;
}
.list_bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 20rpx auto;
  width: 100%;
}
.line {
  width: 100rpx;
  height: 2rpx;
  background: #f0f0f0;
}
.list_bottom_t {
  font-size: 26rpx;
  color: #aaa;
  margin: 20rpx;
}
.getuser_dress{
    width: 80%;
    height: 65rpx;
    line-height: 65rpx;
    font-size: 30rpx;
    text-align: center;
    position: absolute;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
    left: 50%;
}

.undex_bot_img{
    display: block;
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100vw;
    height: 120rpx;
}