.stepper {
  /* margin-right: 30rpx; */
  height: 54rpx;
  width: 152rpx;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 2rpx solid #ddd;
}

.stepper text {
  width: 50rpx;
  box-sizing: border-box;
  padding: 15rpx;
  line-height: 50rpx;
  text-align: center;
  color: #7bdaaa;
}

