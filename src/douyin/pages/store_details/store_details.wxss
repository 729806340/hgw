.stroe_details {
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
  width: 100vw;
  height: 100vh;
  background: #fff;
}
.details_img {
  width: 100%;
  height: 340rpx;
  position: relative;
  background: #fff;
}

.go_dress {
  width: 100%;
  height: 92rpx;
  opacity: 0.9;
  background: #2eb772;
  padding-left: 24rpx;
  box-sizing: border-box;
  line-height: 92rpx;
  color: #fff;
  font-size: 32rpx;
  z-index: 200;
  position: absolute;
  left: 0;
  bottom: 0;
}

.details_img .img1 {
  display: block;
  width: 100%;
  height: 100%;
  margin: auto;
  position: absolute;
  top: 0;
}

.details_img .img2 {
  display: block;
  width: 126rpx;
  height: 126rpx;
  margin: auto;
  position: absolute;
  bottom: 38rpx;
  right: 16rpx;
  z-index: 999;
}

.dress_info {
  display: flex;
  width: 100%;
  flex-direction: column;
  background: #fff;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.info_item {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.info_img {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.info_img image {
  display: block;
  width: 36rpx;
  height: 36rpx;
  margin: auto;
  margin-right: 12rpx;
}

.info_img text {
  font-size: 28rpx;
  color: #222;
  letter-spacing: 0;
}

.info_message {
  font-size: 28rpx;
  color: #888;
  letter-spacing: 0;
  text-align: right;
}

.stroeDetail_container {
  width: 100%;
  height: 820rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  position: relative;
  padding-top: 90rpx;
  box-sizing: border-box;
  background:#fff;
}

.col {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 90rpx;
  z-index: 100;
  position: absolute;
  top: 0;
  left: 0;
}

.scroll-header {
  display: flex;
  white-space: nowrap;
  width: 100vw;
  height: 90rpx;
  background: #fff;
  border-bottom: solid 2rpx #f4f4f4;
  padding-left: 20rpx;
  box-sizing: border-box;
}

.ons {
  color: #333 !important;
  border-bottom: 4rpx solid #7bdaaa !important;
}

.scroll-header .classText {
  display: inline-block;
  font-size: 26rpx;
  line-height: 80rpx;
  text-align: center;
  color: #999;
  margin:  0 20rpx;
}

.swiper-box {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.swiper-item {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.goods_block {
  height: 240rpx;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-evenly;
  border-bottom: 2rpx solid #ededed;
}

.goods_img {
  width: 148rpx;
  height: 148rpx;
  margin: 0 24rpx;
  background: pink;
  position: relative;
}
.goods_img image{
  display: block;
  width: 100%;
  height: 100%;
}

.goods_img .stock_img{
  display: block;
  width: 148rpx;
  height: 148rpx;
  position: absolute;
  top: 0;
  left: 0;
  opacity: .7;
}

.goods_info {
  width: 530rpx;
  margin-right: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.goods_title {
  font-size: 26rpx;
  color: #333;
  line-height: 42rpx;
  margin-bottom: 26rpx;
}

.goods_con {
  display: flex;
  height: 54rpx;
  flex-direction: row;
  justify-content: space-between;
  padding-right: 5rpx;
  box-sizing: border-box;
}

.goods_price {
  display: flex;
  height: 54rpx;
  flex-direction: row;
  align-items: baseline;
}

.goods_price image{
  display: block;
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.gr {
  font-size: 30rpx;
  color: #fe5a4c;
}

.gl {
  font-size: 20rpx;
  color: #bbb;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.goods_plus{
  /* height: 54rpx; */
}
.goods_plus image{
  width: 56rpx;
  height: 56rpx;
}
