page {
  background-color: #f5f5f5;
}

.pre_title {
  height: 166rpx;
  width: 100%;
  background: #fff;
  border-top: 1rpx solid #ddd;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.pre_title image {
  width: 94rpx;
  height: 94rpx;
  margin-left: 24rpx;
}

.pre_content {
  background: #fff;
  margin-top: 24rpx;
}

.pre_num {
  display: flex;
  flex-direction: column;
  margin-left: -300rpx;
  font-weight: light;
}

.pre_num_y {
  font-size: 15px;
  color: #999;
  letter-spacing: 0;
  margin-bottom: 20rpx;
}

.pre_num_z {
  font-size: 22px;
  color: #555;
  letter-spacing: 0;
}

.dollar {
  font-size: 12px;
  color: #555;
  letter-spacing: 0;
  margin-left: 3rpx;
}

.charge_btn {
  width: 102rpx;
  height: 56rpx;
  line-height: 53rpx;
  background: #fff;
  border: 2rpx solid #2eb772;
  border-radius: 5px;
  font-size: 14px;
  color: #2eb772;
  letter-spacing: 0;
  text-align: center;
  margin-right: 24rpx;
  box-shadow: 0;
  margin-top: 4rpx;
}

.pre_list {
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid #ededed;
}

.pre_list view {
  width: 158rpx;
  font-size: 15px;
  color: #555;
  letter-spacing: 0;
  text-align: center;
}

.chosen {
  color: #2eb772 !important;
  border-bottom: 6rpx solid#2EB772;
}

.rest {
  background: #fff;
}

.r_con {
  border-bottom: 1rpx solid #ededed;
  padding: 24rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.rest_order {
  font-size: 26rpx;
  color: #777;
  letter-spacing: 0;
  line-height: 21px;
  display: flex;
  flex-direction: column;
}

.green_num {
  font-size: 44rpx;
  color: #2eb772;
  letter-spacing: 0;
  text-align: right;
}

.red_num {
  font-size: 44rpx;
  color: #fe5a4c;
  letter-spacing: 0;
  text-align: right;
}

.detail_num {
  display: flex;
  flex-direction: column;
}

.detail_time {
  font-size: 26rpx;
  color: #bbb;
  letter-spacing: 0;
  text-align: right;
  line-height: 21px;
}

.font28 {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}
.scroll{
  width: 100vw;
  height: 92vh;
  box-sizing: border-box;
  padding-bottom: 24rpx;
}