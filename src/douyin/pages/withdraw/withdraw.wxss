/* pages/withdrawRecord/withdrawRecord.wxss */

.root {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: #F7F7F7
}

.top {
  width: 100%;
  height: 302rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #FE8964
}

.top .amount {
  display: flex;
  justify-content: center;
  flex-direction: column;
  font-size: 32rpx;
  color: #FFFFFF;
}

.top .decimal {
  display: flex;
  margin-top: 10rpx;
  align-items:baseline;
}

.top .amount .price {
  font-size: 48rpx;
}

.top .amount .unit {
  font-size: 28rpx;
}

.withdraw {
  width: 610rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  padding: 28rpx 36rpx;
  background: white;
  border-radius: 12rpx;
  position: fixed;
  top: 240rpx;
  left: 32rpx;
  font-size: 28rpx;
  color: #4D4D4D;
}

.withdraw .container {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
}

.withdraw .container input {
  flex: 1;
  padding: 18rpx;
}

.withdraw .container button {
  width: 160rpx;
  height: 72rpx;
  font-size: 28rpx;
  color: #FE8964;
  margin-left: 20rpx;
  background: white
}

.withdraw .container .placeholder {
  font-size: 28rpx;
  color: #999999;
}

.content {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  margin-top: 174rpx;
}

.content text {
  font-size: 24rpx;
  color: #999999;
}

.content button {
  width: 682rpx;
  height: 72rpx;
  background: #2EB772;
  font-size: 32rpx;
  color: #FFFFFF;
  border-radius: 32rpx;
  margin-top: 78rpx;
}