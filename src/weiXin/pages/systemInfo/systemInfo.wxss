page {
  background-color: #f6f6f6;
}

.main {
  width: 100%;
}

.infoItem {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-bottom: 100rpx;
}

.data {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 25rpx 0;
  box-sizing: border-box;
}

.data text {
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  background: #000;
  border-radius: 10rpx;
  opacity: 0.2;
  width: 234rpx;
  font-size: 24rpx;
  color: #fff;
  padding:  0 10rpx;
}

.infoConent {
  background-color: #fff;
  border-radius: 5px;
  width: 702rpx;
  margin: 0 30rpx;
  box-sizing: border-box;
  padding: 20rpx 28rpx;
  position: relative;
  margin-bottom: 20rpx;

}

.inform {
  font-size: 30rpx;
  color: #222;
  padding: 10rpx 0;
}

.informContent {
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #555;
}

.footerTitle {
  width: 100%;
  font-size: 24rpx;
  color: #bbb;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
}

.footerTitle text {
  text-align: center;
}

.optionI {
  width: 15rpx;
  height: 15rpx;
  background-color: #f00;
  border-radius: 50%;
  position: absolute;
  top: 10rpx;
  left: 10rpx;
}

.more {
  font-size: 26rpx;
  color: #aaa;
  text-align: center;
  margin-top: 36rpx;
}
