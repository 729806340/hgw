/* pages/distributionCenter/distributionCenter.wxss */

.root {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.top {
  width: 100vw;
  height: 470rpx;
  /* position: relative; */
  display: flex;
  flex-direction: column;
  position: fixed;
}

.top .background {
  width: 750rpx;
  height: 430rpx;
}

.top .header {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  position: absolute;
  top: 46rpx;
  left: 0;
}

.top .header .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.top .header text {
  font-size: 34rpx;
  color: white;
  margin-top: 14rpx;
}

.top .header .distribution {
  font-size: 28rpx;
  color: #FD9575;
  padding: 8rpx 30rpx;
  margin-top: 30rpx;
  border-radius: 26rpx;
  background: white
}

.top .brokerage {
  display: flex;
  flex-direction: row;
  /* justify-content: flex-end; */
  font-size: 28rpx;
  color: #FFFFFF;
  align-items:baseline;
}

.top .brokerage .price {
  font-size: 48rpx;
  color: #FFFFFF;
}

.top .brokerage .withdraw {
  width: 120rpx;
  line-height: 40rpx;
  border: 1px solid #FCFCFC;
  border-radius: 23rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  margin-left: 26rpx;
  position: relative;
  top: -5rpx;
}

.br {
  border-right: 1rpx solid rgba(255,255,255,0.5)
}

.top .segment {
  width: 100%;
  height: 92rpx;
  display: flex;
  margin-top: 24rpx;
  background: rgba(0,0,0,0.02);
}

.top .segment .item {
  line-height: 92rpx;
  display: flex;
  flex-direction: row;
  flex: 1;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #FFFFFF;
}

.top .segment .item text {
  margin-left: 16rpx;
}

.top .segment .item image {
  width: 38rpx;
  height: 36rpx;
  position: relative;
  top: 5rpx;
}

.top .segment .item .order {
  width: 32rpx;
  height: 36rpx;
}

.decoration {
  width: 100vw;
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 430rpx;
  left: 0;
  z-index: 999
}

.decoration image {
  width: 702rpx;
  height: 120rpx;
}

.decoration .section {
  display: flex;
  /* justify-content: center; */
  /* margin-top: 40rpx; */
}

.decoration .section image {
  width: 40rpx;
  height: 44rpx;
}

.decoration .section text {
  font-size: 32rpx;
  color: #4A403F;
  margin-left: 10rpx;
}

.scroll-header {
  width: 100vw;
  background: #fff;
  display: flex;
  white-space: nowrap;
  /* border-bottom: solid 2rpx #f4f4f4; */
}

.scroll-header :last-child {
  margin-right: 20rpx;
}

.scroll-header .classText {
  display: inline-block;
  font-size: 26rpx;
  height: 86rpx;
  line-height: 92rpx;
  margin: 0 20rpx;
  color: #999;
}

.ons {
  color: #333 !important;
  border-bottom: 4rpx solid #7BDAAA !important;
}

.scroll {
  width: 100vw;
  padding-top: 522rpx;
  padding-bottom: 0;
  box-sizing: border-box;
  height: 100vh;
}

.scroll .cell {
  display: flex;
  padding: 24rpx 20rpx;
  border-bottom: 2rpx solid #ededed;
  background: white
}

.scroll .cell image {
  width: 152rpx;
  height: 152rpx;
}

.scroll .cell .container {
  width: 538rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.scroll .cell .container .name {
  width: 528rpx;
  font-size: 26rpx;
  color: #222222;
}

.scroll .cell .container .content {
  width: 528rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.scroll .cell .container .content .price {
  font-size: 36rpx;
  color: #FE5A4C;
}

.scroll .cell .container .content .info {
  font-size: 28rpx;
  color: #5A5757;
}

.scroll .cell .container .content .not_permission {
  display: flex;
  font-size: 24rpx;
  color: #5A5757;
}

.scroll .cell .container .content .not_permission .brokerage {
  color: #FF8F50
}

.scroll .cell .container .header {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.scroll .cell .container .header .distribution {
  width: 120rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-left: 20rpx;
  font-size: 22rpx;
  color: #888;
  background: white
}

.scroll .cell .container .header .distribution image {
  width: 46rpx;
  height: 46rpx;
  margin: 0 auto;
}

.scroll .cell .container .header .distribution text {
  font-size: 22rpx;
  color: #888;
  margin-top: 10rpx;
  overflow: hidden;
}

.model_screen {
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  opacity: 0.6;
  background: #000000;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.model_attr_box{
  width: 578rpx;
  height: 544rpx;
  position: fixed;
  left: 90rpx;
  top: 25%;
  padding:0;
  box-sizing: border-box; 
  z-index: 2000;
  border-radius: 12rpx;
  background: white
}

.model_attr_box .background {
  width: 578rpx;
  height: 544rpx;
}

.model_attr_box .delete{
  width: 68rpx;
  height: 110rpx;
  position: absolute;
  bottom: -110rpx;
  left: 255rpx;
  z-index: 999;
  transform: rotate(180deg);
}

.store_layout {
  width: 540rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background: white;
  position: absolute;
  left: 40rpx;
  top: 120rpx;
  z-index: 2000
}

.store_layout text {
  font-size: 28rpx;
  color: #474747;
}

.store_layout input {
  width: 500rpx;
  height: 72rpx;
  font-size: 24rpx;
  color: #AAAAAA;
  margin-top: 32rpx;
  padding-left: 20rpx;
  border: 2px solid #F1F1F1;
  border-radius: 8rpx;
}

.store_layout button {
  width: 500rpx;
  height: 72rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  margin-top: 72rpx;
  background: #2EB772;
  border-radius: 10rpx;
}

.list_bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 auto;
  width: 100%;
}

.line {
  width: 100rpx;
  height: 2rpx;
  background: #f0f0f0;
}

.list_bottom_t {
  font-size: 26rpx;
  color: #aaa;
  margin: 20rpx;
}
