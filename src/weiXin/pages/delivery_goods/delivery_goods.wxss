/* pages/delivery_goods/delivery_goods.wxss */
page{
  padding: 24rpx;
  box-sizing: border-box;
}
.head{
  width: 714rpx;
  height: 199.8rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  z-index:1;

}
.dis{
  /* background-color: rebeccapurple; */
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.picker{
  width: 165rpx;
  height: 78rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #F7F7F7;
  border-radius: 10rpx; 
  font-family: PingFangSC-Medium;
  font-size: 24rpx;
  color: #999999;
  letter-spacing: 0;
  text-align: center;
  margin-right: 14rpx;
}
.iph{
 margin-right: 10rpx;
}
.picker image{
 width: 20rpx;
 height: 16rpx;
}
/* 搜索框 */
.search_layout {
  flex: 1;
  height: 78rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* padding: 0 24rpx; */
  font-size: 25rpx;
  background: #FFFFFF;
  border: 1px solid #DDDDDD;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.search_row {
  width: 100%;
  display: flex;
  flex-direction: row;
  line-height: 78rpx;
  align-items: center;
}
.search_txt{
  flex: 1;
  padding: 0 24rpx;
  height: 78rpx;
  line-height: 78rpx;
}
.icon_search{
   padding: 20rpx;
}
     /* <!-- 提（未）走    --> */
.bill{
  width: 100%;
  background: #fff;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-family: PingFangSC-Medium;
  font-size: 28rpx;
  color: #333333;
  letter-spacing: 0;
  top: 0;
  left: 0;
}
.bill view{
  width: 33%;
  text-align: center;
}

.classText{
    display: inline-block;
    font-size: 26rpx;
    padding:28rpx 0;
    text-align:center;
    /* margin: 0 20rpx; */
    color: #333333;
    border-bottom: 4rpx solid #fff;
}
.isActive{
  color: #2CCC60;
  border-bottom: 4rpx solid #2CCC60;
}

/* 滚动 */
.Statistics{
  padding-top: 220rpx;
  padding-bottom: 20rpx;
  /* width: 100vw; */
  height: 100vh;
  box-sizing: border-box;
  
}
.listBox{
  width: 100%;
  background: #fff;
  border-radius: 10rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.list_userBox{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #E8E8E8;
  margin-bottom: 24rpx;
}
.list_u_left{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.list_u_left image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 16rpx;
}
.list_u_left .r{

}
.list_u_left .r .t{
  font-size: 28rpx;
  color: #333;
}
.list_u_left .r .t_2{
  font-size: 20rpx;
  color: #999;
  margin-top: 4rpx;
}

.list_goodsBox{
  width: 100%;
  display: flex;
  margin-bottom: 24rpx;
}
.list_g_img{
  width: 116rpx;
  height: 116rpx;
}
.list_g_info{
  padding: 0 20rpx;
  width: 406rpx;
  height: 116rpx;
}
.list_g_name{
  font-size: 28rpx;
  color: #333;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.list_g_gg{
  font-size: 20rpx;
  color: #666;
  width: 100%;
  margin-top: 12rpx;
}
.list_g_prc{
  height: 76rpx;
  width: 140rpx;
  text-align: right;
}
.list_g_prc .t{
  font-size: 28rpx;
  color: #333;
}
.list_g_prc .t_2{
  font-size: 20rpx;
  color: #666;
}

.order_numBox{
  border-bottom: 2rpx solid #E8E8E8;
}
.order_numBox view{
  font-size: 20rpx;
  color: #666;
  text-align: center;
  flex: 1;
}
.order_numBox view text{
  color: #FF523A;
}
.user_phone{
  display: flex;
  align-items: center;
  padding-top: 30rpx;
}
.user_phone text{

font-family: PingFangSC-Regular;
font-size: 20rpx;
color: #999999;
letter-spacing: 0;
text-align: center;
padding: 4rpx 0 4rpx 40rpx;
}

.user_address{
  padding: 4rpx 0 30rpx 40rpx;
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #999999;
  letter-spacing: 0;
}
.bottomBox{
  width: 100%;
  padding: 20rpx 0;
  color: #666;
  font-size: 24rpx;
  text-align: center;
}