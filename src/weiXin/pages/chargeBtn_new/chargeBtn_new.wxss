page {
  background-color: #f5f5f5;
}

.c_title {
  border-top: 1rpx solid #ddd;
  height: 58rpx;
  line-height: 58rpx;
  padding: 24rpx 28rpx;
  background: transparent;
  font-size: 26rpx;
  color: #222;
  letter-spacing: 0;
}

.charge_item {
  width: 100%;
  height: 436rpx;
  background: #fff;
  position: relative;
}

.item_list {
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  flex-wrap: wrap;
  padding-top: 28rpx;
}

.item_list button {
  width: 218rpx;
  height: 86rpx;
  line-height: 86rpx;
  background: #fff;
  border: 1rpx solid #2eb772;
  border-radius: 3px;
  font-size: 30rpx;
  color: #555;
  letter-spacing: 0;
  text-align: center;
  margin-bottom: 28rpx;
}

.green {
  background: #2eb772 !important;
  color: #fff !important;
}

.otherNum {
  display: flex;
  flex-direction: column;
  margin-left: 28rpx;
  padding-top: 30rpx;
}

.other_Num {
  font-size: 26rpx;
  color: #777;
  letter-spacing: 0;
}

.dollar {
  font-size: 60rpx;
  color: #222;
  letter-spacing: 0;
  margin-top: 20rpx;
  position: relative;
}

