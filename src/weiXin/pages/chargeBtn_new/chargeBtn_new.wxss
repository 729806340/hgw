.charge_btn {
  height: 120rpx;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0;
  margin: 0 auto;
  line-height: 120rpx;
}

.charge_btn button {
  width: 702rpx;
  height: 88rpx;
  margin: 0 auto;
  line-height: 88rpx;
  background: #2eb772;
  border-radius: 5px;
  font-size: 16px;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  margin-top: 17rpx;
}

.charge_info {
  width: 554rpx;
  font-size: 24rpx;
  color: #999;
  letter-spacing: 0;
  text-align: center;
  line-height: 20px;
  position: absolute;
  bottom: 160rpx;
  left: 98rpx;
}

.charge_info text {
  color: #2eb772;
}

.placeholder {
  font-size: 28rpx;
  color: #aaa;
}
