page{
  background: #fff;
}
.card_title {
  width: 100%;
  height: 100%;
  border-top: 1rpx solid #ddd;
  display: flex;
  flex-direction: column;
}

.card_title image {
  width: 138rpx;
  height: 138rpx;
  margin: 204rpx auto 0;
}

.card_title button {
  background: #2eb772;
  border-radius: 10rpx;
  width: 602rpx;
  height: 88rpx;
  margin: 108rpx auto 0;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
}

.card_name {
  font-size: 30rpx;
  color: #222;
  letter-spacing: 0;
  margin: 28rpx auto 0;
}

.card_info {
  margin: 20rpx auto 0;
}

.card_num {
  font-size: 72rpx;
  color: #222;
  letter-spacing: 0;
}

.card_class {
  font-size: 48rpx;
  color: #222;
}

.card_detail {
  font-size: 28rpx;
  color: #375f97;
  letter-spacing: 0;
  text-align: center;
  margin: 36rpx auto 0;
}
