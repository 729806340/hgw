  font-size: 48rpx;
  padding: 22rpx 0;
}
.tabBox{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 20rpx;
}
.tab_item{
  flex: 1;
  font-size: 28rpx;
  color: #333;
  padding: 22rpx 0;
  text-align: center;
  border-bottom: 4rpx solid #fff;
}
.tab_item_a{
  color: #2CCC60;
