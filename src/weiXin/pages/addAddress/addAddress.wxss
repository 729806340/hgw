page {
  background-color: #f5f5f5;
}

.auth-info-container {
  width: 100vw;
  margin: auto;
  padding-top: 10rpx;
  background-color: #fff;
}

.row {
  display: flex;
  flex-direction: row;
}

label {
  display: box;
  display: -webkit-box;
  display: -moz-box;
  -webkit-box-align: center;
  box-align: center;
}

.auth-info-container .input-item {
  width: 100%;
  border-bottom: solid 1rpx #ededed;
}

.region {
  position: relative;
}

.auth-info-container .l-text-name {
  font-size: 28rpx;
  color: #555;
  padding-left: 30rpx;
  display: block;
  width: 190rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.placeholder {
  font-size: 28rpx;
  color: #aaa;
}

.input-text {
  display: block;
  border: none;
  padding: 0 10rpx;
  font-size: 30rpx;
  height: 80rpx;
  width: 480rpx;
}

.auth-info-container .section {
  padding: 0 10rpx;
  height: 100rpx;
  line-height: 100rpx;
  color: #bdbdbd;
  font-size: 30rpx;
}

.auth-info-container .h-icon {
  float: left;
  width: 30rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.auth-info-container .h-icon image {
  width: 30rpx;
  height: 30rpx;
}

.auth-info-container .hint {
  float: left;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  color: #bdbdbd;
  background: url(../weixinImg/dw_icon@2x.png) 0.4rpx center no-repeat;
  background-size: 0.4rpx;
}

.auth-info-container .submit-box {
  width: 100%;
  height: 110rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 0;
  align-items: center;
}

.auth-info-container .submit-btn {
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #2eb772;
  font-size: 30rpx;
  color: #fff;
  border-radius: 8rpx;
  text-align: center;
}

.getAddress {
  font-size: 30rpx;
  /* width: 450rpx; */
