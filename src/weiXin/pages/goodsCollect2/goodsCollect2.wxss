page{
  border-top: 2rpx solid #ededed;
  background: #f7f7f7;
}
.scrollRight {
  height: 100vh;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding-bottom:100rpx;
}
.scroll_left_col {
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.scroll-left {
  width: 170rpx;
  height: 100vh;
  padding-top: 344rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  border-right: solid 2rpx #f4f4f4;
}

.scroll-left text {
  line-height: 120%;
  font-size: 24rpx;
  padding: 35rpx 0;
  max-width: 130rpx;
  color: #999;
}

.scroll-left icon {
  margin-left: 10rpx;
}

.scroll_right {
  height: 100vh;
  width: 580rpx;
  box-sizing: border-box;
  padding-top: 344rpx;
}

.img {
  width: 100%;
  margin: 14rpx 0;
  display: flex;
  align-content: center;
}

.hotImg {
  width: 250rpx;
  height: 80rpx;
  margin: 0 auto;
}

.singleTrade {
  width: 342rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0;
  margin-left: 20rpx;
  border-bottom: solid 2rpx #f5f5f5;
  position: relative;
  background: #fff;
  box-shadow: 0 1px 2px 1px #f0f0f0;
  border-radius: 4px;
}

.goodsImg {
  width: 342rpx;
  height: 342rpx;
  border-radius: 4px 4px 0 0;
  position: relative;
}

.sqImg {
  width: 158rpx;
  height: 158rpx;
  position: absolute;
  top: 25%;
  left: 25%;
  z-index: 999;
}

.goodsDetail {
  width: 342rpx;
}

.goodsName {
  display: block;
  font-size: 28rpx;
  color: #222;
  line-height: 36rpx;
  height: 36rpx;
  width: 342rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-top: 24rpx;
}

.goodsPrice {
  display: flex;
  flex-direction: row;
  margin: 26rpx 20rpx;
  align-items: baseline;
  justify-content: space-between;
  align-content: center;
}

.goodsPrice image {
  width: 30rpx;
  height: 30rpx;
}

.ds {
  font-size: 24rpx;
  color: #fe5a4c;
}

.price {
  font-size: 34rpx;
  color: #fe5a4c;
}

.goShop {
  font-size: 24rpx;
  color: #666;
}

.goShop image {
  width: 16rpx;
  height: 16rpx;
}

.list_bottom {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0 auto;
  width: 100%;
}

.line {
  width: 100rpx;
  height: 2rpx;
  background: #f0f0f0;
}

.list_bottom_t {
  font-size: 26rpx;
  color: #aaa;
  margin: 20rpx;
}

.deleteImg{
  width: 30rpx;
  height: 30rpx;
}