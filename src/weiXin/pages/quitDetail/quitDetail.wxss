}

.root {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #fff;
  overflow: hidden;
  border-top: 2rpx solid #ededed;
}

.goods_title_row {
  flex-direction: row;
  height: 74rpx;
  align-items: center;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
}

.img_icon {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}

.shop_name {
  font-size: 26rpx;
  color: #888;
  margin-left: 16rpx;
}

.shop_t1 {
  font-size: 26rpx;
  color: #888;
}



.order_goods_row {
  width: 100vw;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  padding-top: 25rpx;
  box-sizing: border-box;
  align-items: flex-start;
  border-bottom: 2rpx solid #f0f0f0;
}

.order_goods_img {
  width: 120rpx;
  height: 120rpx;
  margin-left: 30rpx;
}

.order_goods_t1 {
  max-width: 450rpx;
  margin-left: 30rpx;
  font-size: 24rpx;
  color: #000;
}

.order_goods_col {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding-right: 30rpx;
}

.order_goods_t2 {
  font-size: 30rpx;
  font-weight: 400;
  color: #000;
  margin-bottom: 30rpx;
}

.goods_bottom_row {
  width: 100vw;
  height: 110rpx;
  display: flex;
  box-sizing: border-box;
  padding-right: 30rpx;
  align-items: center;
  flex-direction: row;
  border-bottom: #f5f5f5 solid 20rpx;
}

.goods_bottom_row_t1 {
  font-size: 30rpx;
  color: #222;
  margin-left: 30rpx;
}

.goods_bottom_row_t2 {
  font-size: 24rpx;
  color: #fa7e36;
  margin-left: 15rpx;
}

.row2 {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  align-items: center;
  padding-right: 20rpx;
  border-bottom: 20rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.pay_type {
  color: #333;
  font-size: 24rpx;
  margin-left: 30rpx;
}

.row22 {
  display: flex;
  flex-direction: row;
  padding: 15rpx 0;
}

.btn_no {
  height: 56rpx;
  width: 160rpx;
  font-size: 24rpx;
  margin-left: 16rpx;
  color: #666;
  border-radius: 10rpx;
  background: #fff;
  border: solid #eee 2rpx;
  line-height: 56rpx;
  text-align: center;
}

.btn_ok {
  height: 56rpx;
  width: 160rpx;
  font-size: 24rpx;
  margin-left: 16rpx;
