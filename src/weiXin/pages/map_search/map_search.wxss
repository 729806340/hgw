view {
  font-weight: 300;
}

.root {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f6f6f6;
  overflow: hidden;
}

.search_layout {
  width: 100vw;
  height: 100rpx;
  background: #fff;
  box-sizing: border-box;
  display: flex;
  border-bottom: 2rpx solid #f6f6f6;
  flex-direction: row;
  align-items: center;
  padding: 0 30rpx;
  position: fixed;
  top: 0;
}

.search_row {
  width: 100%;
  display: flex;
  flex-direction: row;
  height: 60rpx;
  background: #f6f6f6;
  align-items: center;
  border-radius: 30rpx;
}

.icon_search {
  margin-left: 27rpx;
}

.search_txt {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #333;
  width: 100%;
  caret-color: #268bfb;
}

.scroll {
  width: 100vw;
  height: 100vh;
  box-sizing: border-box;
  padding-top: 100rpx;
}

.map_col {
  width: 100vw;
  display: flex;
  flex-direction: column;
}

.map_item_row {
  width: 100vw;
  background: #fff;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  border-bottom: 2rpx solid #f5f5f5;
  align-items: center;
  flex-direction: row;
}

.map_item {
  display: flex;
  flex-direction: column;
}
.map_name {
  font-size: 28rpx;
  color: #333;
}

.map_address {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.img_circle {
  width: 40rpx;
  height: 40rpx;
}

.null_text {
  color: #666;
  font-size: 30rpx;
  align-self: center;
  margin-top: 250rpx;
}