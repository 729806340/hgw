.root {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #fff;
  overflow: hidden;
}

.row {
  width: 100vw;
  display: flex;
  flex-direction: row;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f5f5f5;
  align-items: center;
}

.img {
  width: 88rpx;
  height: 88rpx;
}

.col {
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}

.z_t {
  width: 30rpx;
  height: 30rpx;
  color: #fff;
  line-height: 30rpx;
  text-align: center;
  font-size: 22rpx;
  background: #ffc000;
  border-radius: 5rpx;
}

.name {
  font-size: 26rpx;
  color: #333;
  margin-left: 10rpx;
}

.row1 {
  align-items: center;
  display: flex;
  flex-direction: row;
}
.row2 {
  width: 550rpx;
  align-items: center;
  justify-content: space-around;
  display: flex;
  flex-direction: row;
}

.name1 {
  color: #999;
  font-size: 26rpx;
  margin-top: 22rpx;
}

.price {
  align-self: flex-start;
  color: #999;
  font-size: 26rpx;
  margin-top: 22rpx;
}
